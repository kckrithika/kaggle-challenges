{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Validation Schema for k8s Services",
    "$id": "ServicesSchema",
    "$ref": "#/allProperties",

    "allProperties": {
        "properties": {

            "kind": {
                "enum": [ "Service" ]
            },

            "metadata": {
                "properties": {

                    "annotations": {
                        "allOf": [
                            { "$ref": "k8sConfigs#/Rule_SLBAnnotationValidation" },
                            { "$ref": "k8sConfigs#/Rule_AnnotationValidation" }
                        ]
                    },

                    "labels": {
                        "$ref": "k8sConfigs#/Rule_LabelsValidation"
                    },

                    "namespace": {
                        
                    }

                }
            }

        }
    }
}