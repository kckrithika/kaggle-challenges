{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Validation Schema for Manifest Files",
    "$ref": "#/allProperties",

    "allProperties": {
        "type": "object",
        "allOf": [ { "$ref": "manifestConfigs#/Rule_ManifestRequirements/MustExist" } ],
        "properties": {

            "apiVersion": {

            },

            "system": {
                "type": "object",
                "allOf": [ { "$ref": "manifestConfigs#/Rule_SystemRequirements/MustExist" } ],
                "properties": {

                    "notifications": {

                    },
        
                    "functions": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "allOf": [ 
                                { "$ref": "manifestConfigs#/Rule_FunctionsRequirements/MustExist" },
                                { "$ref": "manifestConfigs#/Rule_FunctionTypeValidation/TypesRequirements" }
                            ],
                            "properties": {

                                "name": {
                                    "type": "string",
                                    "$ref": "manifestConfigs#/Rule_IsDNSValidation"
                                },

                                "count": {
                                    "type": "integer"
                                },

                                "type": {
                                    "type": "string",
                                    "$ref": "manifestConfigs#/Rule_FunctionTypeValidation/TypesAllowed"
                                },

                                "hostnetwork": {
                                    "type": "boolean"
                                },

                                "annotations": {
                                    "type": "object",
                                    "allOf": [
                                        { "$ref": "manifestConfigs#/Rule_ReservedLabels" },
                                        { "$ref": "manifestConfigs#/Rule_ValidateLabels" }
                                    ]
                                },

                                "labels": {
                                    "type": "object",
                                    "allOf": [
                                        { "$ref": "manifestConfigs#/Rule_ReservedLabels" },
                                        { "$ref": "manifestConfigs#/Rule_ValidateLabels" }
                                    ]
                                },
                        
                                "identity": {
                                    "type": "object",
                                    "$ref": "manifestConfigs#/Rule_IdentityValidation"
                                },

                                "lbname": {
                                    "type": "string",
                                    "$ref": "manifestConfigs#/Rule_IsDNSValidation"
                                },

                                "containers": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "allOf": [
                                            { "$ref": "manifestConfigs#/Rule_ContainerRequirements/MustExist" },
                                            { "$ref": "manifestConfigs#/Rule_ContainerRequirements/NotAllowed" }
                                        ],
                                        "properties": {
                                            "name": {
                                                "type": "string",
                                                "$ref": "manifestConfigs#/Rule_IsDNSValidation"
                                            },

                                            "env": {
                                                "items": {
                                                    "type": "object",
                                                    "allOf": [ { "$ref": "manifestConfigs#/Rule_EnvRequirements/MustExist" } ],
                                                    "properties": {
                                                        "name": {
                                                            "type": "string",
                                                            "allOf": [
                                                                { "$ref": "manifestConfigs#/Rule_EnvVariableName/EnvNamePatterns" },
                                                                { "$ref": "manifestConfigs#/Rule_EnvVariableName/ReservedEnvName" }
                                                            ]
                                                            
                                                        },
                                                        "value": {
                                                            "type": [ "string", "integer", "boolean" ]
                                                        }
                                                    }
                                                }
                                            },

                                            "image": {
                                                "type": "string",
                                                "allOf": [
                                                    { "$ref": "manifestConfigs#/Rule_InsecureImageValidation" },
                                                    { "$ref": "manifestConfigs#/Rule_ImageForm" }
                                                ]
                                            },

                                            "livenessProbe": {
                                                "type": "object",
                                                "properties": {

                                                    "httpGet": {
                                                        "type": "object",
                                                        "allOf": [ { "$ref": "manifestConfigs#/Rule_HttpGetRequirements/MustExist" } ],
                                                        "properties": {

                                                            "path": {

                                                            },

                                                            "port": {
                                                                "type": "integer"
                                                            }

                                                        }
                                                    }

                                                }
                                            },

                                            "ports": {
                                                "type": "array",
                                                "items": {
                                                    "type": "object",
                                                    "properties": {
                                                
                                                        "containerPort": {
                                                            "type": "integer",
                                                            "$ref": "manifestConfigs#/Rule_ValidateContainerPort/IsValidPortNumber"
                                                        },
                                                        
                                                        "name": {
                                                            "type": "string",
                                                            "$ref": "manifestConfigs#/Rule_ValidateContainerPort/IsValidPortName"
                                                        }
                                                
                                                    }
                                                }
                                            },

                                            "volumeMounts": {
                                                "type": "array",
                                                "items": {
                                                    "type": "object",
                                                    "allOf": [
                                                        { "$ref": "manifestConfigs#/Rule_VolumeMountRequirements/MustExist" },
                                                        { "$ref": "manifestConfigs#/Rule_VolumeMountRequirements/NotAllowed" },
                                                        { "$ref": "manifestConfigs#/Rule_VolumeMountValidation/SecretVolume" }
                                                    ],
                                                    "properties": {

                                                        "name": {
                                                            "type": "string",
                                                            "$ref": "manifestConfigs#/Rule_IsDNSValidation"
                                                        },

                                                        "mountPath": {
                                                            "type": "string",
                                                            "$ref": "manifestConfigs#/Rule_VolumeMountValidation/MountPathPattern"
                                                        },

                                                        "readOnly": {
                                                            "type": "boolean"
                                                        }

                                                    }
                                                }
                                            },

                                            "resources": {

                                            }

                                        }
                                    }
                                },

                                "volumes": {
                                    "items": {
                                        "type": "object",
                                        "$ref": "manifestConfigs#/Rule_VolumesFormat"
                                    }
                                },

                                "volumeClaimTemplates": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "allOf": [ { "$ref": "manifestConfigs#/Rule_volumeClaimTemplatesRequirements/MustExist" } ],
                                        "properties": {
                                            "name": {
                                                "type": "string"
                                            }
                                        }
                                    }
                                }

                            }
                        }
                    },

                    "loadbalancers": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "allOf": [
                                { "$ref": "manifestConfigs#/Rule_LBFunctionOrSelector" },
                                { "$ref": "manifestConfigs#/Rule_LBRequirements/MustExist" }
                            ],
                            "properties": {

                                "lbname": {
                                    "type": "string",
                                    "$ref":  "manifestConfigs#/Rule_IsDNS1035Validation"
                                },

                                "labels": {
                                    "type": "object",
                                    "allOf": [
                                        { "$ref": "manifestConfigs#/Rule_ReservedLabels" },
                                        { "$ref": "manifestConfigs#/Rule_ValidateLabels" }
                                    ]
                                },

                                "function": {

                                },

                                "selector": {

                                },

                                "slbEnabled": {
                                    "type": "boolean"
                                },

                                "nodeExposed": {
                                    "type": "boolean"
                                },

                                "ports": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "allOf": [
                                            { "$ref": "manifestConfigs#/Rule_LBPortRequirements/MustExist" },
                                            { "$ref": "manifestConfigs#/Rule_LBPortsValidation/LBDestinationPort" },
                                            { "$ref": "manifestConfigs#/Rule_LBPortsValidation/LBTypeSpecificParameters" },
                                            { "$ref": "manifestConfigs#/Rule_LBPortsValidation/LBPortAlgorithm" },
                                            { "$ref": "manifestConfigs#/Rule_LBPortsValidation/TLSValidation" }
                                        ],
                                        "properties": {

                                            "lbtype": {
                                                "$ref": "manifestConfigs#/Rule_LBPortsValidation/LBPortAllowedTypes"
                                            },

                                            "port": {
                                                "type": "integer"
                                            },

                                            "targetPort": {
                                                "type": "integer"
                                            },

                                            "tls": {
                                                "type": "boolean"
                                            },

                                            "lbalgorithm": {
                                                "type": "string",
                                                "$ref": "manifestConfigs#/Rule_LBPortsValidation/LBPortAllowedAlgorithm"
                                            },

                                            "allow": {
                                                "type": "array",
                                                "$ref": "manifestConfigs#/Rule_LBPortsValidation/CIDRValidation"
                                            },

                                            "deny": {
                                                "type": "array",
                                                "$ref": "manifestConfigs#/Rule_LBPortsValidation/CIDRValidation"
                                            },

                                            "throttleswhitelist": {
                                                "type": "array",
                                                "$ref": "manifestConfigs#/Rule_LBPortsValidation/CIDRValidation"
                                            },

                                            "tlscertificate": {
                                                "type": "string",
                                                "$ref": "manifestConfigs#/Rule_LBPortsValidation/TLSPattern"
                                            },

                                            "tlskey": {
                                                "type": "string",
                                                "$ref": "manifestConfigs#/Rule_LBPortsValidation/TLSPattern"
                                            }

                                        }
                                    }
                                }
                                
                            }
                        }
                    }

                }
            }
        }
    }
}
