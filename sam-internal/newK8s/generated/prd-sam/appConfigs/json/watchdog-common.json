{
   "apiVersion": "extensions/v1beta1",
   "kind": "DaemonSet",
   "metadata": {
      "labels": {
         "name": "watchdog-common"
      },
      "name": "watchdog-common"
   },
   "spec": {
      "template": {
         "metadata": {
            "labels": {
               "app": "watchdog-common",
               "apptype": "monitoring"
            }
         },
         "spec": {
            "containers": [
               {
                  "command": [
                     "/sam/watchdog",
                     "-role=COMMON"
                  ],
                  "image": "shared0-samcontrol1-1-prd.eng.sfdc.net:5000/watchdog:prabh.singh-20160920_234757-7f22ddd",
                  "name": "watchdog",
                  "resources": {
                     "limits": {
                        "cpu": "0.5",
                        "memory": "300Mi"
                     },
                     "requests": {
                        "cpu": "0.5",
                        "memory": "300Mi"
                     }
                  }
               }
            ],
            "hostNetwork": true,
            "nodeSelector": {
               "COMMON": "true"
            }
         }
      }
   }
}
