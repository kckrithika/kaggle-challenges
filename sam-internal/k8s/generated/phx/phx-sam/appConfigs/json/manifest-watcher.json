{
   "apiVersion": "extensions/v1beta1",
   "kind": "Deployment",
   "metadata": {
      "labels": {
         "name": "manifest-watcher"
      },
      "name": "manifest-watcher"
   },
   "spec": {
      "replicas": 1,
      "selector": {
         "matchLabels": {
            "name": "manifest-watcher"
         }
      },
      "template": {
         "metadata": {
            "labels": {
               "apptype": "control",
               "name": "manifest-watcher"
            }
         },
         "spec": {
            "containers": [
               {
                  "command": [
                     "/sam/manifest-watcher",
                     "--funneladdr=mandm-funnel2-0-phx.data.sfdc.net:8080",
                     "--v=2",
                     "--logtostderr=true",
                     "--disableCertsCheck=true",
                     "--tnrpArchiveEndpoint=https://ops0-piperepo1-1-phx.ops.sfdc.net/tnrp/content_repo/0/archive"
                  ],
                  "image": "shared0-samkubeapi1-1-phx.ops.sfdc.net:5000/hypersam:ce3affd",
                  "name": "manifest-watcher"
               }
            ],
            "hostNetwork": true,
            "nodeSelector": {
               "pool": "phx-sam"
            },
            "volumes": [
               {
                  "hostPath": {
                     "path": "/manifests"
                  },
                  "name": "sfdc-volume"
               }
            ]
         }
      }
   }
}
