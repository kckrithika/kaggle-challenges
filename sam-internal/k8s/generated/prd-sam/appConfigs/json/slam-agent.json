{
   "apiVersion": "extensions/v1beta1",
   "kind": "DaemonSet",
   "metadata": {
      "labels": {
         "name": "slam-agent"
      },
      "name": "slam-agent"
   },
   "spec": {
      "template": {
         "metadata": {
            "labels": {
               "app": "slam-agent",
               "apptype": "logagent",
               "daemonset": "true"
            }
         },
         "spec": {
            "containers": [
               {
                  "image": "shared0-samcontrol1-1-prd.eng.sfdc.net:5000/hypersam:xiao.zhou-20161014_115059-562cfb7",
                  "livenessProbe": {
                     "httpGet": {
                        "path": "/health",
                        "port": 30108
                     },
                     "initialDelaySeconds": 15,
                     "timeoutSeconds": 1
                  },
                  "name": "slam-agent",
                  "ports": [
                     {
                        "containerPort": 30108,
                        "hostPort": 30108,
                        "name": "slam-agent"
                     }
                  ],
                  "volumeMounts": [
                     {
                        "mountPath": "/var/run/",
                        "name": "varrun"
                     },
                     {
                        "mountPath": "/var/log/",
                        "name": "varlog",
                        "readOnly": true
                     }
                  ]
               }
            ],
            "volumes": [
               {
                  "hostPath": {
                     "path": "/var/run/"
                  },
                  "name": "varrun"
               },
               {
                  "hostPath": {
                     "path": "/var/log"
                  },
                  "name": "varlog"
               }
            ]
         }
      }
   }
}
