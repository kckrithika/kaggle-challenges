{
   "apiVersion": "extensions/v1beta1",
   "kind": "Deployment",
   "metadata": {
      "labels": {
         "name": "sdccontrol"
      },
      "name": "sdccontrol"
   },
   "spec": {
      "replicas": 3,
      "selector": {
         "matchLabels": {
            "name": "sdc-peering-agent"
         }
      },
      "template": {
         "metadata": {
            "labels": {
               "apptype": "control",
               "name": "sdc-peering-agent"
            }
         },
         "spec": {
            "containers": [
               {
                  "image": "shared0-sdcsamkubeapi1-1-prd.eng.sfdc.net:5000/sdc-peering-agent:latest",
                  "name": "sdc-peering-agent",
                  "volumeMounts": [
                     {
                        "mountPath": "/usr/local/etc",
                        "name": "conf"
                     },
                     {
                        "mountPath": "/usr/local/var/run",
                        "name": "socket"
                     }
                  ]
               },
               {
                  "image": "shared0-sdcsamkubeapi1-1-prd.eng.sfdc.net:5000/sdc-peering-conf:latest",
                  "name": "sdc-peering-conf",
                  "volumeMounts": [
                     {
                        "mountPath": "/usr/local/etc",
                        "name": "conf"
                     },
                     {
                        "mountPath": "/usr/local/var/run",
                        "name": "socket"
                     },
                     {
                        "mountPath": "/root/src/sdcc/conf",
                        "name": "bird-csv"
                     }
                  ]
               },
               {
                  "command": [
                     "/sdc-metrics/publisher",
                     "--funnelEndpoint=ajna0-funnel1-0-prd.data.sfdc.net:80"
                  ],
                  "image": "shared0-sdcsamkubeapi1-1-prd.eng.sfdc.net:5000/sdc-metrics:latest",
                  "name": "sdc-metrics"
               }
            ],
            "hostNetwork": true,
            "nodeSelector": {
               "pool": "prd-sdc"
            },
            "volumes": [
               {
                  "emptyDir": { },
                  "name": "conf"
               },
               {
                  "emptyDir": { },
                  "name": "socket"
               },
               {
                  "hostPath": {
                     "path": "/usr/local/sdc_bird_conf"
                  },
                  "name": "bird-csv"
               }
            ]
         }
      }
   }
}
