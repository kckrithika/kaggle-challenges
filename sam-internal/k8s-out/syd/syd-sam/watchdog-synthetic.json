{
   "apiVersion": "extensions/v1beta1",
   "kind": "Deployment",
   "metadata": {
      "labels": {
         "name": "watchdog-synthetic"
      },
      "name": "watchdog-synthetic"
   },
   "spec": {
      "replicas": 1,
      "selector": {
         "matchLabels": {
            "name": "watchdog-synthetic"
         }
      },
      "template": {
         "metadata": {
            "labels": {
               "apptype": "monitoring",
               "name": "watchdog-synthetic"
            }
         },
         "spec": {
            "containers": [
               {
                  "command": [
                     "/sam/watchdog",
                     "-role=SYNTHETIC",
                     "-watchdogFrequency=60s",
                     "-alertThreshold=300s",
                     "-emailFrequency=12h",
                     "-laddr=0.0.0.0:8083",
                     "-imageName=ops0-artifactrepo1-0-syd.data.sfdc.net/tnrp/sam/hypersam:sam-0001087-559df78b",
                     "-timeout=2s",
                     "-funnelEndpoint=ajna0-funnel1-0-syd.data.sfdc.net:80",
                     "-rcImtEndpoint=https://ops0-health1-1-syd.ops.sfdc.net:18443/v1/bark",
                     "-smtpServer=ops0-mta2-1-syd.ops.sfdc.net:25",
                     "-sender=sam-alerts@salesforce.com",
                     "-recipient=sam-alerts@salesforce.com"
                  ],
                  "env": [
                     {
                        "name": "KUBECONFIG",
                        "value": "/kubeconfig/kubeconfig"
                     }
                  ],
                  "image": "ops0-artifactrepo1-0-syd.data.sfdc.net/tnrp/sam/hypersam:sam-0001087-559df78b",
                  "name": "watchdog-synthetic",
                  "ports": [
                     {
                        "containerPort": 8083,
                        "name": "synthetic"
                     }
                  ],
                  "volumeMounts": [
                     {
                        "mountPath": "/test",
                        "name": "test"
                     },
                     {
                        "mountPath": "/_output",
                        "name": "output"
                     },
                     {
                        "mountPath": "/kubeconfig",
                        "name": "kubeconfig"
                     },
                     {
                        "mountPath": "/data/certs",
                        "name": "certs"
                     },
                     {
                        "mountPath": "/config",
                        "name": "config"
                     }
                  ]
               }
            ],
            "hostNetwork": true,
            "nodeSelector": {
               "pool": "syd-sam"
            },
            "volumes": [
               {
                  "hostPath": {
                     "path": "/data/certs"
                  },
                  "name": "certs"
               },
               {
                  "hostPath": {
                     "path": "/manifests"
                  },
                  "name": "sfdc-volume"
               },
               {
                  "emptyDir": { },
                  "name": "test"
               },
               {
                  "emptyDir": { },
                  "name": "output"
               },
               {
                  "hostPath": {
                     "path": "/etc/kubernetes"
                  },
                  "name": "kubeconfig"
               },
               {
                  "configMap": {
                     "name": "watchdog"
                  },
                  "name": "config"
               }
            ]
         }
      }
   }
}
