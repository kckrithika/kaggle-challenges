{
   "apiVersion": "extensions/v1beta1",
   "kind": "DaemonSet",
   "metadata": {
      "labels": {
         "name": "watchdog-common"
      },
      "name": "watchdog-common"
   },
   "spec": {
      "template": {
         "metadata": {
            "labels": {
               "app": "watchdog-common",
               "apptype": "monitoring",
               "daemonset": "true"
            }
         },
         "spec": {
            "containers": [
               {
                  "command": [
                     "/sam/watchdog",
                     "-role=COMMON",
                     "-watchdogFrequency=5s",
                     "-alertThreshold=150s",
                     "-timeout=2s",
                     "-emailFrequency=12h",
                     "-funnelEndpoint=ajna0-funnel1-0-prd.data.sfdc.net:80",
                     "-rcImtEndpoint=https://ops0-health1-1-prd.eng.sfdc.net:18443/v1/bark",
                     "-smtpServer=rd1-mta1-4-sfm.ops.sfdc.net:25",
                     "-sender=sam@salesforce.com",
                     "-recipient=sam@salesforce.com"
                  ],
                  "image": "ops0-artifactrepo2-0-prd.data.sfdc.net/docker-release-candidate/tnrp/sam/hypersam:sam-0000767-193277c9",
                  "name": "watchdog",
                  "resources": {
                     "limits": {
                        "cpu": "0.5",
                        "memory": "300Mi"
                     },
                     "requests": {
                        "cpu": "0.5",
                        "memory": "300Mi"
                     }
                  }
               }
            ],
            "hostNetwork": true
         }
      }
   }
}
