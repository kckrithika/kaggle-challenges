                     "--archiveSvcEndpoint=https://ops0-piperepo1-1-prd.eng.sfdc.net/tnrp/content_repo/0/archive"
                  ],
                  "image": "ops0-artifactrepo2-0-prd.data.sfdc.net/docker-release-candidate/tnrp/sam/hypersam:sam-0000733-7c1115e1",
                  "name": "sdn-peering-agent",
                  "volumeMounts": [
                     {
                        "mountPath": "/usr/local/etc",
                        "name": "conf"
                     },
                     {
                        "mountPath": "/usr/local/var/run",
                        "name": "socket"
                     },
                     {
                        "mountPath": "/usr/local/sdn",
                        "name": "sdn-vol",
                        "readOnly": true
                     }
                  ]
               }
            ],
            "hostNetwork": true,
            "volumes": [
               {
                  "emptyDir": { },
                  "name": "conf"
               },
               {
                  "emptyDir": { },
                  "name": "socket"
               },
               {
                  "hostPath": {
                     "path": "/usr/local/sdc"
                  },
                  "name": "sdn-vol"
               }
            ]
         }
      }
   }
