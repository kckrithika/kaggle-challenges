{
   "apiVersion": "extensions/v1beta1",
   "kind": "Deployment",
   "metadata": {
      "labels": {
         "name": "watchdog-sdp"
      },
      "name": "watchdog-sdp"
   },
   "spec": {
      "replicas": 1,
      "selector": {
         "matchLabels": {
            "name": "watchdog-sdp"
         }
      },
      "template": {
         "metadata": {
            "labels": {
               "apptype": "monitoring",
               "name": "watchdog-sdp"
            }
         },
         "spec": {
            "containers": [
               {
                  "command": [
                     "/sam/watchdog",
                     "-role=SDP",
                     "-sdpEndpoint=http://localhost:39999",
                     "-watchdogFrequency=10s",
                     "-alertThreshold=300s",
                     "-emailFrequency=12h",
                     "-timeout=2s",
                     "-funnelEndpoint=ajna0-funnel1-0-prd.data.sfdc.net:80",
                     "-rcImtEndpoint=https://ops0-health1-1-prd.eng.sfdc.net:18443/v1/bark",
                     "-smtpServer=rd1-mta1-4-sfm.ops.sfdc.net:25",
                     "-sender=sam@salesforce.com",
                     "-recipient=sam@salesforce.com"
                  ],
                  "image": "ops0-artifactrepo2-0-prd.data.sfdc.net/docker-release-candidate/tnrp/sam/hypersam:sam-0000854-12298328",
                  "name": "watchdog-sdp"
               }
            ],
            "hostNetwork": true,
            "nodeSelector": {
               "pool": "prd-samdev"
            }
         }
      }
   }
}
