{
   "apiVersion": "extensions/v1beta1",
   "kind": "Deployment",
   "metadata": {
      "labels": {
         "name": "k8sproxy"
      },
      "name": "k8sproxy",
      "namespace": "sam-system"
   },
   "spec": {
      "replicas": 1,
      "selector": {
         "matchLabels": {
            "name": "k8sproxy"
         }
      },
      "template": {
         "metadata": {
            "labels": {
               "apptype": "proxy",
               "name": "k8sproxy"
            }
         },
         "spec": {
            "containers": [
               {
                  "args": [
                     "-f ",
                     "/etc/haproxy/haproxy.cfg"
                  ],
                  "image": "ops0-artifactrepo1-0-prd.data.sfdc.net/docker-sam/thargrove/haproxy:20170404_084549.17ef285.dirty.thargrove-ltm1",
                  "livenessProbe": {
                     "httpGet": {
                        "path": "/",
                        "port": 8080
                     },
                     "initialDelaySeconds": 15,
                     "timeoutSeconds": 10
                  },
                  "name": "k8sproxy",
                  "ports": [
                     {
                        "containerPort": 8080,
                        "name": "k8sproxy"
                     }
                  ],
                  "volumeMounts": [
                     {
                        "mountPath": "/etc/certs",
                        "name": "sfdc-volume"
                     }
                  ]
               }
            ],
            "hostNetwork": true,
            "nodeSelector": {
               "pool": "prd-sam"
            },
            "volumes": [
               {
                  "hostPath": {
                     "path": "/data/certs"
                  },
                  "name": "sfdc-volume"
               }
            ]
         }
      }
   }
}
