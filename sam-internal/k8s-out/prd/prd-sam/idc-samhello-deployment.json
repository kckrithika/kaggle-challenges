{
   "apiVersion": "extensions/v1beta1",
   "kind": "Deployment",
   "metadata": {
      "labels": {
         "name": "idc-samhello"
      },
      "name": "idc-samhello-deployment",
      "namespace": "sam-system"
   },
   "spec": {
      "replicas": 1,
      "template": {
         "metadata": {
            "labels": {
               "name": "idc-samhello"
            }
         },
         "spec": {
            "containers": [
               {
                  "image": "ops0-artifactrepo1-0-prd.data.sfdc.net/docker-sam/ichakeres/samhello:idc-20170811b",
                  "livenessProbe": {
                     "httpGet": {
                        "path": "/",
                        "port": 9090
                     }
                  },
                  "name": "idc-samhello",
                  "ports": [
                     {
                        "containerPort": 9090
                     }
                  ]
               }
            ],
            "hostNetwork": true,
            "nodeSelector": {
               "pool": "prd-sam"
            }
         }
      }
   }
}
