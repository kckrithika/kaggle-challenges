{
   "apiVersion": "extensions/v1beta1",
   "kind": "DaemonSet",
   "metadata": {
      "labels": {
         "name": "slb-realsvrcfg"
      },
      "name": "slb-realsvrcfg"
   },
   "spec": {
      "template": {
         "metadata": {
            "labels": {
               "apptype": "control",
               "daemonset": "true",
               "name": "slb-realsvrcfg"
            }
         },
         "spec": {
            "containers": [
               {
                  "command": [
                     "/sdn/slb-realsvrcfg",
                     "--configDir=/host/var/slb/config",
                     "--period=5s",
                     "--netInterfaceName=eth0"
                  ],
                  "image": "ops0-artifactrepo2-0-prd.data.sfdc.net/docker-release-candidate/tnrp/sam/hypersam:sam-0000900-4864e366",
                  "name": "slb-realsvrcfg",
                  "securityContext": {
                     "privileged": true
                  },
                  "volumeMounts": [
                     {
                        "mountPath": "/host/var/slb",
                        "name": "var-slb-volume"
                     },
                     {
                        "mountPath": "/host",
                        "name": "host-volume"
                     }
                  ]
               }
            ],
            "hostNetwork": true,
            "volumes": [
               {
                  "hostPath": {
                     "path": "/var/slb"
                  },
                  "name": "var-slb-volume"
               },
               {
                  "hostPath": {
                     "path": "/"
                  },
                  "name": "host-volume"
               }
            ]
         }
      }
   }
}
