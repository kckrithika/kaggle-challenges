{
   "apiVersion": "extensions/v1beta1",
   "kind": "Deployment",
   "metadata": {
      "labels": {
         "name": "samsqlreporter"
      },
      "name": "samsqlreporter",
      "namespace": "sam-system"
   },
   "spec": {
      "replicas": 2,
      "selector": {
         "matchLabels": {
            "name": "samsqlreporter"
         }
      },
      "template": {
         "metadata": {
            "labels": {
               "apptype": "control",
               "name": "samsqlreporter"
            }
         },
         "spec": {
            "containers": [
               {
                  "args": [
                     "--dbPasswordFile=/var/secrets/mysql.txt",
                     "-v=5",
                     "--alsologtostderr",
                     "--port=64212",
                     "--queryFile=/var/queries/sam-sql-queries.json"
                  ],
                  "command": [
                     "/sam/sam-sql-reporter"
                  ],
                  "image": "ops0-artifactrepo2-0-prd.data.sfdc.net/docker-release-candidate/tnrp/sam/hypersam:sam-0001780-a269ec85",
                  "livenessProbe": {
                     "httpGet": {
                        "path": "/",
                        "port": 64212
                     }
                  },
                  "name": "samsqlreporter",
                  "ports": [
                     {
                        "containerPort": 64212,
                        "protocol": "TCP"
                     }
                  ],
                  "volumeMounts": [
                     {
                        "mountPath": "/var/secrets/",
                        "name": "mysql",
                        "readOnly": true
                     },
                     {
                        "mountPath": "/var/queries/",
                        "name": "queries",
                        "readOnly": true
                     }
                  ]
               }
            ],
            "nodeSelector": {
               "pool": "prd-sam"
            },
            "volumes": [
               {
                  "name": "mysql",
                  "secret": {
                     "secretName": "mysql"
                  }
               },
               {
                  "configMap": {
                     "name": "samsqlqueries"
                  },
                  "name": "queries"
               }
            ]
         }
      }
   }
}
