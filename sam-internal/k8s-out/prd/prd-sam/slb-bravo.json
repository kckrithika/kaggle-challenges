{
   "apiVersion": "extensions/v1beta1",
   "kind": "Deployment",
   "metadata": {
      "labels": {
         "name": "slb-bravo"
      },
      "name": "slb-bravo"
   },
   "spec": {
      "replicas": 1,
      "template": {
         "metadata": {
            "labels": {
               "name": "slb-bravo"
            }
         },
         "spec": {
            "containers": [
               {
                  "command": [
                     "/sdn/slb-canary-service",
                     "--serviceName=slb-bravo-svc",
                     "--port=9090",
                     "--metricsEndpoint=ajna0-funnel1-0-prd.data.sfdc.net:80",
                     "--log_dir=/host/var/slb/logs"
                  ],
                  "image": "ops0-artifactrepo2-0-prd.data.sfdc.net/docker-release-candidate/tnrp/sdn/hypersdn:v-0000289-2c9bb222",
                  "name": "slb-bravo",
                  "volumeMounts": [
                     {
                        "mountPath": "/dev",
                        "name": "dev-volume"
                     },
                     {
                        "mountPath": "/host",
                        "name": "host-volume"
                     },
                     {
                        "mountPath": "/host/var/slb/logs",
                        "name": "var-logs-volume"
                     }
                  ]
               }
            ],
            "nodeSelector": {
               "pool": "prd-sam"
            },
            "volumes": [
               {
                  "hostPath": {
                     "path": "/var/slb"
                  },
                  "name": "var-slb-volume"
               },
               {
                  "hostPath": {
                     "path": "/dev"
                  },
                  "name": "dev-volume"
               },
               {
                  "hostPath": {
                     "path": "/"
                  },
                  "name": "host-volume"
               },
               {
                  "hostPath": {
                     "path": "/var/slb/logs"
                  },
                  "name": "var-logs-volume"
               }
            ]
         }
      }
   }
}
