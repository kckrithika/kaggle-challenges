{
   "apiVersion": "extensions/v1beta1",
   "kind": "Deployment",
   "metadata": {
      "labels": {
         "name": "watchdog-proxy"
      },
      "name": "watchdog-proxy"
   },
   "spec": {
      "replicas": 1,
      "selector": {
         "matchLabels": {
            "name": "watchdog-proxy"
         }
      },
      "template": {
         "metadata": {
            "labels": {
               "apptype": "monitoring",
               "name": "watchdog-proxy"
            }
         },
         "spec": {
            "containers": [
               {
                  "command": [
                     "/sam/watchdog",
                     "-role=K8SPROXY",
                     "-k8sproxyEndpoint=http://localhost:40000",
                     "-watchdogFrequency=10s",
                     "-alertThreshold=300s",
                     "-emailFrequency=48h",
                     "-timeout=2s",
                     "-funnelEndpoint=ajna0-funnel1-0-prd.data.sfdc.net:80",
                     "-rcImtEndpoint=https://ops0-health1-1-prd.eng.sfdc.net:18443/v1/bark",
                     "-smtpServer=rd1-mta1-4-sfm.ops.sfdc.net:25",
                     "-sender=sam@salesforce.com",
                     "-recipient=sam@salesforce.com"
                  ],
                  "image": "ops0-artifactrepo2-0-prd.data.sfdc.net/docker-release-candidate/tnrp/sam/hypersam:sam-0000947-edc298bd",
                  "name": "watchdog-proxy"
               }
            ],
            "hostNetwork": true,
            "nodeSelector": {
               "master": "true",
               "pool": "prd-samtest"
            }
         }
      }
   }
}
