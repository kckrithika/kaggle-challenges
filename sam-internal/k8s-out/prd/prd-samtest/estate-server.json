{
   "apiVersion": "extensions/v1beta1",
   "kind": "Deployment",
   "metadata": {
      "labels": {
         "name": "estate-server"
      },
      "name": "estate-server",
      "namespace": "sam-system"
   },
   "spec": {
      "replicas": 3,
      "selector": {
         "matchLabels": {
            "name": "estate-server"
         }
      },
      "template": {
         "metadata": {
            "labels": {
               "apptype": "server",
               "name": "estate-server"
            }
         },
         "spec": {
            "containers": [
               {
                  "args": [
                     "prd"
                  ],
                  "command": [
                     "/sam/estatesvc/script/estatesvc-wrapper.sh"
                  ],
                  "image": "ops0-artifactrepo1-0-prd.data.sfdc.net/docker-sam/yunfan-wang/hypersam:2017.7.14.2",
                  "livenessProbe": {
                     "httpGet": {
                        "path": "/info",
                        "port": 9090
                     },
                     "initialDelaySeconds": 15,
                     "timeoutSeconds": 10
                  },
                  "name": "estate-server",
                  "ports": [
                     {
                        "containerPort": 9090,
                        "name": "estate-server"
                     }
                  ]
               }
            ],
            "nodeSelector": {
               "master": "true",
               "pool": "prd-samtest"
            },
            "securityContext": {
               "fsGroup": 0,
               "runAsUser": 0
            }
         }
      }
   }
}
