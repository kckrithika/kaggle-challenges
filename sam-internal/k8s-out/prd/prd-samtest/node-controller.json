{
   "apiVersion": "extensions/v1beta1",
   "kind": "Deployment",
   "metadata": {
      "labels": {
         "name": "node-controller"
      },
      "name": "node-controller",
      "namespace": "sam-system"
   },
   "spec": {
      "replicas": 1,
      "selector": {
         "matchLabels": {
            "name": "node-controller"
         }
      },
      "template": {
         "metadata": {
            "labels": {
               "apptype": "control",
               "name": "node-controller"
            }
         },
         "spec": {
            "containers": [
               {
                  "command": [
                     "/sam/node-controller",
                     "--funnelEndpoint=ajna0-funnel1-0-prd.data.sfdc.net:80"
                  ],
                  "env": [
                     {
                        "name": "NODE_NAME",
                        "valueFrom": {
                           "fieldRef": {
                              "fieldPath": "spec.nodeName"
                           }
                        }
                     },
                     {
                        "name": "KUBECONFIG",
                        "value": "/kubeconfig/kubeconfig"
                     }
                  ],
                  "image": "ops0-artifactrepo2-0-prd.data.sfdc.net/docker-release-candidate/tnrp/sam/hypersam:sam-0001138-0ae46aba",
                  "name": "node-controller",
                  "volumeMounts": [
                     {
                        "mountPath": "/data/certs",
                        "name": "certs"
                     },
                     {
                        "mountPath": "/kubeconfig",
                        "name": "kubeconfig"
                     }
                  ]
               }
            ],
            "nodeSelector": {
               "master": "true",
               "pool": "prd-samtest"
            },
            "volumes": [
               {
                  "hostPath": {
                     "path": "/data/certs"
                  },
                  "name": "certs"
               },
               {
                  "hostPath": {
                     "path": "/etc/kubernetes"
                  },
                  "name": "kubeconfig"
               }
            ]
         }
      }
   }
}
