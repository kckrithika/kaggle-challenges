{
   "apiVersion": "extensions/v1beta1",
   "kind": "Deployment",
   "metadata": {
      "labels": {
         "name": "node-controller"
      },
      "name": "node-controller",
      "namespace": "sam-system"
   },
   "spec": {
      "replicas": 1,
      "selector": {
         "matchLabels": {
            "name": "node-controller"
         }
      },
      "template": {
         "metadata": {
            "labels": {
               "apptype": "control",
               "name": "node-controller"
            }
         },
         "spec": {
            "containers": [
               {
                  "command": [
                     "/sam/node-controller"
                  ],
                  "env": [
                     {
                        "name": "KUBECONFIG",
                        "value": "/config/kubeconfig"
                     }
                  ],
                  "image": "ops0-artifactrepo1-0-prd.data.sfdc.net/docker-sam/yunfan-wang/hypersam:2017.7.14.3",
                  "name": "node-controller",
                  "volumeMounts": [
                     {
                        "mountPath": "/data/certs",
                        "name": "certs"
                     },
                     {
                        "mountPath": "/config",
                        "name": "config"
                     }
                  ]
               }
            ],
            "nodeSelector": {
               "master": "true",
               "pool": "prd-samtest"
            },
            "volumes": [
               {
                  "hostPath": {
                     "path": "/data/certs"
                  },
                  "name": "certs"
               },
               {
                  "hostPath": {
                     "path": "/etc/kubernetes"
                  },
                  "name": "config"
               }
            ]
         }
      }
   }
}
