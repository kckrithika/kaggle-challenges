{
   "apiVersion": "extensions/v1beta1",
   "kind": "DaemonSet",
   "metadata": {
      "labels": {
         "name": "watchdog-etcd"
      },
      "name": "watchdog-etcd"
   },
   "spec": {
      "template": {
         "metadata": {
            "labels": {
               "app": "watchdog-etcd",
               "apptype": "monitoring",
               "daemonset": "true"
            }
         },
         "spec": {
            "containers": [
               {
                  "command": [
                     "/sam/watchdog",
                     "-role=ETCD",
                     "-watchdogFrequency=5s",
                     "-alertThreshold=150s",
                     "-timeout=2s",
                     "-funnelEndpoint=ajna0-funnel1-0-prd.data.sfdc.net:80",
                     "-rcImtEndpoint=https://ops0-health1-1-prd.eng.sfdc.net:18443/v1/bark",
                     "-smtpServer=rd1-mta1-4-sfm.ops.sfdc.net:25",
                     "-sender=sam-alerts@salesforce.com",
                     "-recipient=sam@salesforce.com",
                     "--config=/config/watchdog.json",
                     "-tlsEnabled=true",
                     "-caFile=/data/certs/ca.crt",
                     "-keyFile=/data/certs/hostcert.key",
                     "-certFile=/data/certs/hostcert.crt",
                     "-emailFrequency=48h"
                  ],
                  "image": "ops0-artifactrepo1-0-prd.data.sfdc.net/docker-sam/thargrove/hypersam:20170802_093413.c065e44.dirty.thargrove-ltm1.wdliveconfig",
                  "name": "watchdog",
                  "resources": {
                     "limits": {
                        "cpu": "0.5",
                        "memory": "300Mi"
                     },
                     "requests": {
                        "cpu": "0.5",
                        "memory": "300Mi"
                     }
                  },
                  "volumeMounts": [
                     {
                        "mountPath": "/data/certs",
                        "name": "certs"
                     },
                     {
                        "mountPath": "/config",
                        "name": "config"
                     }
                  ]
               }
            ],
            "hostNetwork": true,
            "nodeSelector": {
               "etcd_installed": "true"
            },
            "volumes": [
               {
                  "hostPath": {
                     "path": "/data/certs"
                  },
                  "name": "certs"
               },
               {
                  "configMap": {
                     "name": "watchdog"
                  },
                  "name": "config"
               }
            ]
         }
      }
   }
}
