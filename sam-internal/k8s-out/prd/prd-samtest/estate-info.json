{
   "apiVersion": "extensions/v1beta1",
   "kind": "Deployment",
   "metadata": {
      "labels": {
         "name": "estate-info"
      },
      "name": "estate-info",
      "namespace": "sam-system"
   },
   "spec": {
      "replicas": 1,
      "selector": {
         "matchLabels": {
            "name": "estate-info"
         }
      },
      "template": {
         "metadata": {
            "labels": {
               "apptype": "server",
               "name": "estate-info"
            }
         },
         "spec": {
            "containers": [
               {
                  "args": [ ],
                  "image": "ops0-artifactrepo1-0-prd.data.sfdc.net/docker-sam/yunfan-wang/estates-info-server:2017.06.03.1",
                  "livenessProbe": {
                     "httpGet": {
                        "path": "/",
                        "port": 9090
                     },
                     "initialDelaySeconds": 15,
                     "timeoutSeconds": 10
                  },
                  "name": "estate-info",
                  "ports": [
                     {
                        "containerPort": 9090,
                        "name": "estate-info"
                     }
                  ],
                  "volumeMounts": [
                     {
                        "mountPath": "/etc/certs",
                        "name": "certs"
                     }
                  ]
               }
            ],
            "nodeSelector": {
               "master": "true",
               "pool": "prd-samtest"
            },
            "volumes": {
               "certsPath": {
                  "name": "certs",
                  "path": "/data/certs"
               },
               "configPath": {
                  "name": "config",
                  "path": "/etc/kubernetes"
               }
            }
         }
      }
   }
}
