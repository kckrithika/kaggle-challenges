{
   "apiVersion": "extensions/v1beta1",
   "kind": "Deployment",
   "metadata": {
      "labels": {
         "name": "slb-nginx-config"
      },
      "name": "slb-nginx-config"
   },
   "spec": {
      "replicas": 2,
      "template": {
         "metadata": {
            "labels": {
               "name": "slb-nginx-config"
            }
         },
         "spec": {
            "containers": [
               {
                  "command": [
                     "/sdn/slb-nginx-config",
                     "--configDir=/host/var/slb/config",
                     "--target=/host/var/slb/nginx/config",
                     "--netInterfaceName=eth0",
                     "--metricsEndpoint=ajna0-funnel1-0-prd.data.sfdc.net:80"
                  ],
                  "image": "ops0-artifactrepo2-0-prd.data.sfdc.net/docker-release-candidate/tnrp/sdn/hypersdn:v-0000278-46f8e283",
                  "name": "slb-nginx-config",
                  "securityContext": {
                     "privileged": true
                  },
                  "volumeMounts": [
                     {
                        "mountPath": "/host",
                        "name": "host-volume"
                     },
                     {
                        "mountPath": "/host/var/slb/nginx/config",
                        "name": "var-target-config-volume"
                     },
                     {
                        "mountPath": "/host/var/slb/config",
                        "name": "var-config-volume"
                     }
                  ]
               }
            ],
            "hostNetwork": true,
            "nodeSelector": {
               "slb-service": "slb-nginx"
            },
            "volumes": [
               {
                  "hostPath": {
                     "path": "/"
                  },
                  "name": "host-volume"
               },
               {
                  "hostPath": {
                     "path": "/var/slb/nginx/config"
                  },
                  "name": "var-target-config-volume"
               },
               {
                  "hostPath": {
                     "path": "/var/slb/config"
                  },
                  "name": "var-config-volume"
               }
            ]
         }
      }
   }
}
