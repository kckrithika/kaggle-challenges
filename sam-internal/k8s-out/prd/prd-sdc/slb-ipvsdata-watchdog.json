{
   "apiVersion": "extensions/v1beta1",
   "kind": "Deployment",
   "metadata": {
      "annotations": {
         "scheduler.alpha.kubernetes.io/affinity": "{\n  \"podAntiAffinity\": {\n    \"requiredDuringSchedulingIgnoredDuringExecution\": [\n      {\n        \"labelSelector\": {\n          \"matchExpressions\": [\n            {\n              \"key\": \"name\",\n              \"operator\": \"In\",\n              \"values\": [\"slb-ipvs\"]\n            }\n          ]\n        },\n        \"topologyKey\": \"kubernetes.io/hostname\"\n     }\n    ]\n   }\n }\n"
      },
      "labels": {
         "name": "slb-ipvsdata-watchdog"
      },
      "name": "slb-ipvsdata-watchdog"
   },
   "spec": {
      "replicas": 1,
      "template": {
         "metadata": {
            "labels": {
               "apptype": "monitoring",
               "name": "slb-ipvsdata-watchdog"
            }
         },
         "spec": {
            "containers": [
               {
                  "command": [
                     "/sdn/slb-ipvsdata-watchdog",
                     "--funnelEndpoint=ajna0-funnel1-0-prd.data.sfdc.net:80",
                     "--archiveSvcEndpoint=https://ops0-piperepo1-0-prd.data.sfdc.net/tnrp/content_repo/0/archive",
                     "--smtpServer=rd1-mta1-4-sfm.ops.sfdc.net:25",
                     "--sender=sam-alerts@salesforce.com",
                     "--recipient=slb@salesforce.com",
                     "--emailFrequency=12h",
                     "--watchdogFrequency=180s",
                     "--alertThreshold=300s",
                     "--k8sapiserver=",
                     "--connPort=9107",
                     "--retryPeriod=2m",
                     "--maxretries=2"
                  ],
                  "env": [
                     {
                        "name": "KUBECONFIG",
                        "value": "/kubeconfig/kubeconfig"
                     }
                  ],
                  "image": "ops0-artifactrepo2-0-prd.data.sfdc.net/docker-release-candidate/tnrp/sdn/hypersdn:v-0000267-da9ee46a",
                  "name": "slb-ipvsdata-watchdog",
                  "securityContext": {
                     "privileged": true
                  },
                  "volumeMounts": [
                     {
                        "mountPath": "/host/var/slb",
                        "name": "var-slb-volume"
                     },
                     {
                        "mountPath": "/host",
                        "name": "host-volume"
                     },
                     {
                        "mountPath": "/data/certs",
                        "name": "certs"
                     },
                     {
                        "mountPath": "/kubeconfig",
                        "name": "kubeconfig"
                     }
                  ]
               }
            ],
            "hostNetwork": true,
            "nodeSelector": {
               "pool": "prd-sdc"
            },
            "volumes": [
               {
                  "hostPath": {
                     "path": "/var/slb"
                  },
                  "name": "var-slb-volume"
               },
               {
                  "hostPath": {
                     "path": "/"
                  },
                  "name": "host-volume"
               },
               {
                  "hostPath": {
                     "path": "/data/certs"
                  },
                  "name": "certs"
               },
               {
                  "hostPath": {
                     "path": "/etc/kubernetes"
                  },
                  "name": "kubeconfig"
               }
            ]
         }
      }
   }
}
