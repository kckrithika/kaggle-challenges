{
   "apiVersion": "extensions/v1beta1",
   "kind": "Deployment",
   "metadata": {
      "labels": {
         "name": "slb-alpha"
      },
      "name": "slb-alpha"
   },
   "spec": {
      "replicas": 1,
      "template": {
         "metadata": {
            "labels": {
               "name": "slb-alpha"
            }
         },
         "spec": {
            "containers": [
               {
                  "command": [
                     "/sdn/slb-realsvrcfg",
                     "--configDir=/host/var/slb/config",
                     "--period=5s",
                     "--netInterfaceName=eth0"
                  ],
                  "image": "ops0-artifactrepo2-0-prd.data.sfdc.net/docker-release-candidate/tnrp/sdn/hypersdn:v-0000271-32055dc8",
                  "name": "slb-realsvrcfg-internal",
                  "securityContext": {
                     "privileged": true
                  },
                  "volumeMounts": [
                     {
                        "mountPath": "/host/var/slb",
                        "name": "var-slb-volume"
                     },
                     {
                        "mountPath": "/host",
                        "name": "host-volume"
                     }
                  ]
               }
            ],
            "nodeSelector": {
               "slb-service": "alpha"
            },
            "volumes": [
               {
                  "hostPath": {
                     "path": "/var/slb"
                  },
                  "name": "var-slb-volume"
               },
               {
                  "hostPath": {
                     "path": "/dev"
                  },
                  "name": "dev-volume"
               },
               {
                  "hostPath": {
                     "path": "/"
                  },
                  "name": "host-volume"
               }
            ]
         }
      }
   }
}
