{
   "apiVersion": "extensions/v1beta1",
   "kind": "Deployment",
   "metadata": {
      "labels": {
         "name": "samcontrol"
      },
      "name": "samcontrol"
   },
   "spec": {
      "replicas": 1,
      "selector": {
         "matchLabels": {
            "name": "samcontrol"
         }
      },
      "template": {
         "metadata": {
            "labels": {
               "apptype": "control",
               "name": "samcontrol"
            }
         },
         "spec": {
            "containers": [
               {
                  "command": [
                     "/sam/sam-controller",
                     "--debug=true",
                     "--dockerregistry=shared0-sdcsamkubeapi1-1-prd.eng.sfdc.net:5000",
                     "--funnelEndpoint=ajna0-funnel1-0-prd.data.sfdc.net:80",
                     "--v=3",
                     "--logtostderr=true",
                     "--k8sapiserver=http://localhost:8000",
                     "--tlsEnabled=false",
                     "--caFile=",
                     "--keyFile=",
                     "--certFile="
                  ],
                  "env": [
                     {
                        "name": "KUBECONFIG",
                        "value": "/sam/config"
                     }
                  ],
                  "image": "shared0-sdcsamkubeapi1-1-prd.eng.sfdc.net:5000/hypersam:sam-cd52c792-543",
                  "name": "sam-controller",
                  "volumeMounts": [
                     {
                        "mountPath": "/data/certs",
                        "name": "certs"
                     },
                     {
                        "mountPath": "/config",
                        "name": "config"
                     }
                  ]
               }
            ],
            "hostNetwork": true,
            "nodeSelector": {
               "pool": "prd-sdc"
            },
            "volumes": [
               {
                  "hostPath": {
                     "path": "/data/certs"
                  },
                  "name": "certs"
               },
               {
                  "hostPath": {
                     "path": "/etc/kubernetes"
                  },
                  "name": "config"
               }
            ]
         }
      }
   }
}
