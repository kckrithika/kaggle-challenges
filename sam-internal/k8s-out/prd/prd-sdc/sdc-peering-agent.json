{
   "apiVersion": "extensions/v1beta1",
   "kind": "DaemonSet",
   "metadata": {
      "labels": {
         "name": "sdc-peering-agent"
      },
      "name": "sdc-peering-agent"
   },
   "spec": {
      "template": {
         "metadata": {
            "labels": {
               "apptype": "control",
               "daemonset": "true",
               "name": "sdc-peering-agent"
            }
         },
         "spec": {
            "containers": [
               {
                  "env": [
                     {
                        "name": "BIRD_CONF",
                        "value": "/usr/local/etc/bird.conf"
                     },
                     {
                        "name": "BIRD_SOCKET",
                        "value": "/usr/local/var/run/bird.ctl"
                     }
                  ],
                  "image": "ops0-artifactrepo2-0-prd.data.sfdc.net/docker-release-candidate/tnrp/sdn/bird:v-0000006-9a0bd192",
                  "name": "sdc-bird",
                  "volumeMounts": [
                     {
                        "mountPath": "/usr/local/etc",
                        "name": "conf"
                     },
                     {
                        "mountPath": "/usr/local/var/run",
                        "name": "socket"
                     }
                  ]
               },
               {
                  "command": [
                     "/sdc/sdc-peering-agent",
                     "--birdsock=/usr/local/var/run/bird.ctl",
                     "--birdconf=/usr/local/etc/bird.conf",
                     "--ipamcsv=/usr/local/sdc/conf/samInput.csv",
                     "--vaultkeypair=/usr/local/sdc/SDCBird_keypair",
                     "--funnelEndpoint=ajna0-funnel1-0-prd.data.sfdc.net:80",
                     "--tnrpEndpoint=http://shared0-sdcsamcompute2-14-prd.eng.sfdc.net:14431/tnrp/content_repo/0/archive/"
                  ],
                  "image": "shared0-sdcsamkubeapi1-1-prd.eng.sfdc.net:5000/hypersdc:agajjala-201703211311",
                  "name": "sdc-peering-agent",
                  "volumeMounts": [
                     {
                        "mountPath": "/usr/local/etc",
                        "name": "conf"
                     },
                     {
                        "mountPath": "/usr/local/var/run",
                        "name": "socket"
                     },
                     {
                        "mountPath": "/usr/local/sdc",
                        "name": "sdc-vol",
                        "readOnly": true
                     }
                  ]
               }
            ],
            "hostNetwork": true,
            "volumes": [
               {
                  "emptyDir": { },
                  "name": "conf"
               },
               {
                  "emptyDir": { },
                  "name": "socket"
               },
               {
                  "hostPath": {
                     "path": "/usr/local/sdc"
                  },
                  "name": "sdc-vol"
               }
            ]
         }
      }
   }
}
