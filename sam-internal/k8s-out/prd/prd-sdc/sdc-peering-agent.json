{
   "apiVersion": "extensions/v1beta1",
   "kind": "DaemonSet",
   "metadata": {
      "labels": {
         "name": "sdc-peering-agent"
      },
      "name": "sdc-peering-agent"
   },
   "spec": {
      "template": {
         "metadata": {
            "labels": {
               "apptype": "control",
               "daemonset": "true",
               "name": "sdc-peering-agent"
            }
         },
         "spec": {
            "containers": [
               {
                  "env": [
                     {
                        "name": "BIRD_CONF",
                        "value": "/usr/local/etc/bird.conf"
                     },
                     {
                        "name": "BIRD_SOCKET",
                        "value": "/usr/local/var/run/bird.ctl"
                     }
                  ],
                  "image": "shared0-sdcsamkubeapi1-1-prd.eng.sfdc.net:5000/sdc-bird:agajjala-201702082334",
                  "name": "sdc-bird",
                  "volumeMounts": [
                     {
                        "mountPath": "/usr/local/etc",
                        "name": "conf"
                     },
                     {
                        "mountPath": "/usr/local/var/run",
                        "name": "socket"
                     }
                  ]
               },
               {
                  "args": [
                     "--birdsock",
                     "/usr/local/var/run/bird.ctl",
                     "--birdconf",
                     "/usr/local/etc/bird.conf",
                     "--ipamcsv",
                     "/usr/local/sdc/conf/samInput.csv",
                     "--vaultkeypair",
                     "/usr/local/sdc/SDCBird_keypair",
                     "--funnelEndpoint",
                     "ajna0-funnel1-0-prd.data.sfdc.net:80"
                  ],
                  "image": "shared0-sdcsamkubeapi1-1-prd.eng.sfdc.net:5000/sdc-peering-agent:agajjala-201702231026",
                  "name": "sdc-peering-agent",
                  "volumeMounts": [
                     {
                        "mountPath": "/usr/local/etc",
                        "name": "conf"
                     },
                     {
                        "mountPath": "/usr/local/var/run",
                        "name": "socket"
                     },
                     {
                        "mountPath": "/usr/local/sdc",
                        "name": "sdc-vol",
                        "readOnly": true
                     }
                  ]
               }
            ],
            "hostNetwork": true,
            "volumes": [
               {
                  "emptyDir": { },
                  "name": "conf"
               },
               {
                  "emptyDir": { },
                  "name": "socket"
               },
               {
                  "hostPath": {
                     "path": "/usr/local/sdc"
                  },
                  "name": "sdc-vol"
               }
            ]
         }
      }
   }
}
