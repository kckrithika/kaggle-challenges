{
   "apiVersion": "extensions/v1beta1",
   "kind": "Deployment",
   "metadata": {
      "labels": {
         "name": "samcontrol-deployer"
      },
      "name": "samcontrol-deployer"
   },
   "spec": {
      "replicas": 1,
      "template": {
         "metadata": {
            "labels": {
               "apptype": "control",
               "name": "samcontrol-deployer"
            }
         },
         "spec": {
            "containers": [
               {
                  "command": [
                     "/sam/samcontrol-deployer",
                     "--funnelEndpoint=ajna0-funnel1-0-prd.data.sfdc.net:80",
                     "--logtostderr=true",
                     "--disableSecurityCheck=true",
                     "--tnrpEndpoint=https://ops0-piperepo1-1-prd.eng.sfdc.net/tnrp/content_repo/0/archive",
                     "--k8sapiserver=",
                     "--observeMode=false"
                  ],
                  "env": [
                     {
                        "name": "KUBECONFIG",
                        "value": "/config/kubeconfig"
                     }
                  ],
                  "image": "shared0-sdcsamkubeapi1-1-prd.eng.sfdc.net:5000/hypersam:20170323_095339.2115fbd.dirty.dhu-wsl1",
                  "livenessProbe": {
                     "httpGet": {
                        "path": "/",
                        "port": 9090
                     },
                     "initialDelaySeconds": 2,
                     "periodSeconds": 10
                  },
                  "name": "samcontrol-deployer",
                  "volumeMounts": [
                     {
                        "mountPath": "/data/certs",
                        "name": "certs"
                     },
                     {
                        "mountPath": "/config",
                        "name": "config"
                     }
                  ]
               }
            ],
            "hostNetwork": true,
            "nodeSelector": {
               "pool": "prd-sdc"
            },
            "volumes": [
               {
                  "hostPath": {
                     "path": "/data/certs"
                  },
                  "name": "certs"
               },
               {
                  "hostPath": {
                     "path": "/etc/kubernetes"
                  },
                  "name": "config"
               }
            ]
         }
      }
   }
}
