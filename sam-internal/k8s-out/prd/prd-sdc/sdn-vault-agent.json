{
   "apiVersion": "extensions/v1beta1",
   "kind": "Deployment",
   "metadata": {
      "labels": {
         "name": "sdn-vault-agent"
      },
      "name": "sdn-vault-agent"
   },
   "spec": {
      "replicas": 1,
      "template": {
         "metadata": {
            "labels": {
               "apptype": "monitoring",
               "name": "sdn-vault-agent"
            }
         },
         "spec": {
            "containers": [
               {
                  "command": [
                     "/sdn/sdn-vault-agent",
                     "--funnelEndpoint=ajna0-funnel1-0-prd.data.sfdc.net:80",
                     "--archiveSvcEndpoint=https://ops0-piperepo1-1-prd.eng.sfdc.net/tnrp/content_repo/0/archive",
                     "--keyfile=/data/certs/hostcert.key",
                     "--certfile=/data/certs/hostcert.crt",
                     "--cafile=/data/certs/ca.crt",
                     "--livenessProbePort=9106"
                  ],
                  "image": "ops0-artifactrepo2-0-prd.data.sfdc.net/docker-release-candidate/tnrp/sdn/hypersdn:v-0000181-afcb9bb6",
                  "livenessProbe": {
                     "httpGet": {
                        "path": "/liveness-probe",
                        "port": 9106
                     },
                     "initialDelaySeconds": 5,
                     "periodSeconds": 20,
                     "timeoutSeconds": 5
                  },
                  "name": "sdn-vault-agent",
                  "volumeMounts": [
                     {
                        "mountPath": "/data/certs",
                        "name": "certs"
                     }
                  ]
               }
            ],
            "hostNetwork": true,
            "nodeSelector": {
               "pool": "prd-sdc"
            },
            "volumes": [
               {
                  "hostPath": {
                     "path": "/data/certs"
                  },
                  "name": "certs"
               }
            ]
         }
      }
   }
}
