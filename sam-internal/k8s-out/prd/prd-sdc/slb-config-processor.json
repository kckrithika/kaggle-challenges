{
   "apiVersion": "extensions/v1beta1",
   "kind": "DaemonSet",
   "metadata": {
      "labels": {
         "name": "slb-config-processor"
      },
      "name": "slb-config-processor"
   },
   "spec": {
      "template": {
         "metadata": {
            "labels": {
               "apptype": "control",
               "daemonset": "true",
               "name": "slb-config-processor"
            }
         },
         "spec": {
            "containers": [
               {
                  "command": [
                     "/sdn/slb-config-processor",
                     "--configDir=/host/var/slb/config",
                     "--services=/host/var/slb/services",
                     "--servers=/host/var/slb/servers",
                     "--available=/host/var/slb/available",
                     "--period=30s",
                     "--namespace=sam-system",
                     "--k8sapiserver=",
                     "--serviceList=slb-test-svc",
                     "--vipList=10.251.129.228:80"
                  ],
                  "env": [
                     {
                        "name": "KUBECONFIG",
                        "value": "/config/kubeconfig"
                     }
                  ],
                  "image": "ops0-artifactrepo2-0-prd.data.sfdc.net/docker-release-candidate/tnrp/sam/hypersam:sam-0000832-c5b300e8",
                  "name": "slb-config-processor",
                  "securityContext": {
                     "privileged": true
                  },
                  "volumeMounts": [
                     {
                        "mountPath": "/host/var/slb",
                        "name": "var-slb-volume"
                     },
                     {
                        "mountPath": "/host/var/slb/config",
                        "name": "var-config-volume"
                     },
                     {
                        "mountPath": "/config",
                        "name": "config"
                     }
                  ]
               }
            ],
            "hostNetwork": true,
            "volumes": [
               {
                  "hostPath": {
                     "path": "/var/slb"
                  },
                  "name": "var-slb-volume"
               },
               {
                  "hostPath": {
                     "path": "/var/slb/config"
                  },
                  "name": "var-config-volume"
               },
               {
                  "hostPath": {
                     "path": "/"
                  },
                  "name": "host-volume"
               },
               {
                  "hostPath": {
                     "path": "/data/certs"
                  },
                  "name": "certs"
               },
               {
                  "hostPath": {
                     "path": "/config"
                  },
                  "name": "config"
               }
            ]
         }
      }
   }
}
