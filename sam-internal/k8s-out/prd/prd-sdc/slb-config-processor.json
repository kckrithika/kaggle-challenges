{
   "apiVersion": "extensions/v1beta1",
   "kind": "DaemonSet",
   "metadata": {
      "labels": {
         "name": "slb-config-processor"
      },
      "name": "slb-config-processor"
   },
   "spec": {
      "template": {
         "metadata": {
            "labels": {
               "apptype": "control",
               "daemonset": "true",
               "name": "slb-config-processor"
            }
         },
         "spec": {
            "containers": [
               {
                  "command": [
                     "/sdn/slb-config-processor",
                     "--configDir=/host/var/slb/config",
                     "--period=5s",
                     "--namespace=default",
                     "--k8sApiServer=http://shared0-sdcsamkubeapi1-1-prd.eng.sfdc.net:40000/",
                     "--serviceList=slb-alpha,slb-bravo,slb-charlie,slb-delta,slb-echo",
                     "--vipList=10.251.129.230:9090,10.251.129.231:9090,10.251.129.232:9090,10.251.129.233:9090,10.251.129.234:9090",
                     "--metricsEndpoint=ajna0-funnel1-0-prd.data.sfdc.net:80"
                  ],
                  "env": [
                     {
                        "name": "KUBECONFIG",
                        "value": "/config/kubeconfig"
                     }
                  ],
                  "image": "ops0-artifactrepo2-0-prd.data.sfdc.net/docker-release-candidate/tnrp/sdn/hypersdn:v-0000136-6281e0a8",
                  "name": "slb-config-processor",
                  "securityContext": {
                     "privileged": true
                  },
                  "volumeMounts": [
                     {
                        "mountPath": "/host/var/slb",
                        "name": "var-slb-volume"
                     },
                     {
                        "mountPath": "/host/var/slb/config",
                        "name": "var-config-volume"
                     },
                     {
                        "mountPath": "/host",
                        "name": "host-volume"
                     },
                     {
                        "mountPath": "/data/certs",
                        "name": "certs"
                     },
                     {
                        "mountPath": "/config",
                        "name": "config"
                     }
                  ]
               }
            ],
            "hostNetwork": true,
            "volumes": [
               {
                  "hostPath": {
                     "path": "/var/slb"
                  },
                  "name": "var-slb-volume"
               },
               {
                  "hostPath": {
                     "path": "/var/slb/config"
                  },
                  "name": "var-config-volume"
               },
               {
                  "hostPath": {
                     "path": "/"
                  },
                  "name": "host-volume"
               },
               {
                  "hostPath": {
                     "path": "/data/certs"
                  },
                  "name": "certs"
               },
               {
                  "hostPath": {
                     "path": "/etc/kubernetes"
                  },
                  "name": "config"
               }
            ]
         }
      }
   }
}
