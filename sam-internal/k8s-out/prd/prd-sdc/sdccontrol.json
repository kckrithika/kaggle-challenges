{
   "apiVersion": "extensions/v1beta1",
   "kind": "Deployment",
   "metadata": {
      "labels": {
         "name": "sdccontrol"
      },
      "name": "sdccontrol"
   },
   "spec": {
      "replicas": 3,
      "selector": {
         "matchLabels": {
            "name": "sdc-peering-agent"
         }
      },
      "template": {
         "metadata": {
            "labels": {
               "apptype": "control",
               "name": "sdc-peering-agent"
            }
         },
         "spec": {
            "containers": [
               {
                  "env": [
                     {
                        "name": "BIRD_CONF",
                        "value": "/usr/local/etc/bird.conf"
                     },
                     {
                        "name": "BIRD_SOCKET",
                        "value": "/usr/local/var/run/bird.ctl"
                     }
                  ],
                  "image": "ops0-artifactrepo2-0-prd.data.sfdc.net/sdc-bird:agajjala-201702082334",
                  "name": "sdc-bird",
                  "volumeMounts": [
                     {
                        "mountPath": "/usr/local/etc",
                        "name": "conf"
                     },
                     {
                        "mountPath": "/usr/local/var/run",
                        "name": "socket"
                     }
                  ]
               },
               {
                  "args": [
                     "--birdsock",
                     "/usr/local/var/run/bird.ctl",
                     "--birdconf",
                     "/usr/local/etc/bird.conf",
                     "--ipamcsv",
                     "/usr/local/sdc/conf/samInput.csv",
                     "--vaultkeypair",
                     "/usr/local/sdc/SDCBird_keypair",
                     "--overrideBGPSecret",
                     "NetworkSoftware"
                  ],
                  "image": "ops0-artifactrepo2-0-prd.data.sfdc.net/sdc-peering-agent:agajjala-201702082327",
                  "name": "sdc-peering-agent",
                  "volumeMounts": [
                     {
                        "mountPath": "/usr/local/etc",
                        "name": "conf"
                     },
                     {
                        "mountPath": "/usr/local/var/run",
                        "name": "socket"
                     },
                     {
                        "mountPath": "/usr/local/sdc",
                        "name": "sdc-vol",
                        "readOnly": true
                     }
                  ]
               },
               {
                  "command": [
                     "/sdc-metrics/publisher",
                     "--funnelEndpoint=ajna0-funnel1-0-prd.data.sfdc.net:80"
                  ],
                  "image": "ops0-artifactrepo2-0-prd.data.sfdc.net/sdc-metrics:agajjala-201702082327",
                  "name": "sdc-metrics"
               }
            ],
            "hostNetwork": true,
            "nodeSelector": {
               "pool": "prd-sdc"
            },
            "volumes": [
               {
                  "emptyDir": { },
                  "name": "conf"
               },
               {
                  "emptyDir": { },
                  "name": "socket"
               },
               {
                  "hostPath": {
                     "path": "/usr/local/sdc"
                  },
                  "name": "sdc-vol"
               }
            ]
         }
      }
   }
}
