{
   "apiVersion": "extensions/v1beta1",
   "kind": "Deployment",
   "metadata": {
      "labels": {
         "name": "k8sproxy"
      },
      "name": "k8sproxy",
      "namespace": "sam-system"
   },
   "spec": {
      "replicas": 1,
      "selector": {
         "matchLabels": {
            "name": "k8sproxy"
         }
      },
      "template": {
         "metadata": {
            "labels": {
               "apptype": "proxy",
               "name": "k8sproxy"
            }
         },
         "spec": {
            "containers": [
               {
                  "args": [
                     "-f ",
                     "/etc/haproxy/haproxy.cfg"
                  ],
                  "image": "ops0-artifactrepo2-0-prd.data.sfdc.net/hypersam:sam-cd52c792-543",
                  "name": "k8sproxy",
                  "ports": [
                     {
                        "containerPort": 8080,
                        "name": "k8sproxy"
                     }
                  ],
                  "volumeMounts": [
                     {
                        "mountPath": "/etc/certs",
                        "name": "sfdc-volume"
                     }
                  ]
               }
            ],
            "hostNetwork": true,
            "nodeSelector": {
               "pool": "prd-sdc"
            },
            "volumes": [
               {
                  "hostPath": {
                     "path": "/data/certs"
                  },
                  "name": "sfdc-volume"
               }
            ]
         }
      }
   }
}
