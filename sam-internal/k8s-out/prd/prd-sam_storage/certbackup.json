{
   "apiVersion": "extensions/v1beta1",
   "kind": "DaemonSet",
   "metadata": {
      "labels": {
         "name": "certbackup"
      },
      "name": "certbackup"
   },
   "spec": {
      "template": {
         "metadata": {
            "labels": {
               "daemonset": "true",
               "name": "certbackup"
            }
         },
         "spec": {
            "containers": [
               {
                  "command": [
                     "/sam/certbackup.sh"
                  ],
                  "env": [
                     {
                        "name": "KUBECONFIG",
                        "value": "/kubeconfig/kubeconfig"
                     }
                  ],
                  "image": "ops0-artifactrepo2-0-prd.data.sfdc.net/docker-release-candidate/tnrp/sam/hypersam:sam-0001210-ef6a180b",
                  "name": "certbackup",
                  "volumeMounts": [
                     {
                        "mountPath": "/data/certs",
                        "name": "certs"
                     },
                     {
                        "mountPath": "/kubeconfig",
                        "name": "kubeconfig"
                     }
                  ]
               }
            ],
            "hostNetwork": true,
            "volumes": [
               {
                  "hostPath": {
                     "path": "/data/certs"
                  },
                  "name": "certs"
               },
               {
                  "hostPath": {
                     "path": "/etc/kubernetes"
                  },
                  "name": "kubeconfig"
               }
            ]
         }
      }
   }
}
