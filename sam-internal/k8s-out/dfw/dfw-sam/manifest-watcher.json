{
   "apiVersion": "extensions/v1beta1",
   "kind": "Deployment",
   "metadata": {
      "labels": {
         "name": "manifest-watcher"
      },
      "name": "manifest-watcher"
   },
   "spec": {
      "replicas": 1,
      "selector": {
         "matchLabels": {
            "name": "manifest-watcher"
         }
      },
      "template": {
         "metadata": {
            "labels": {
               "apptype": "control",
               "name": "manifest-watcher"
            }
         },
         "spec": {
            "containers": [
               {
                  "command": [
                     "/sam/manifest-watcher",
                     "--funnelEndpoint=mandm-funnel-dfw1.data.sfdc.net:8080",
                     "--v=2",
                     "--logtostderr=true",
                     "--disableCertsCheck=true",
                     "--tnrpArchiveEndpoint=https://ops0-piperepo1-1-dfw.ops.sfdc.net/tnrp/content_repo/0/archive",
                     "--tlsEnabled=false",
                     "--caFile=",
                     "--keyFile=",
                     "--certFile="
                  ],
                  "image": "shared0-samkubeapi1-1-dfw.ops.sfdc.net:5000/hypersam:ce3affd",
                  "name": "manifest-watcher",
                  "volumeMounts": [
                     {
                        "mountPath": "/data/certs",
                        "name": "certs"
                     }
                  ]
               }
            ],
            "hostNetwork": true,
            "nodeSelector": {
               "pool": "dfw-sam"
            },
            "volumes": [
               {
                  "hostPath": {
                     "path": "/data/certs"
                  },
                  "name": "certs"
               },
               {
                  "hostPath": {
                     "path": "/manifests"
                  },
                  "name": "sfdc-volume"
               }
            ]
         }
      }
   }
}
