{
   "apiVersion": "extensions/v1beta1",
   "kind": "Deployment",
   "metadata": {
      "labels": {
         "name": "watchdog-apiserverlb"
      },
      "name": "watchdog-apiserverlb"
   },
   "spec": {
      "replicas": 1,
      "selector": {
         "matchLabels": {
            "name": "watchdog-apiserverlb"
         }
      },
      "template": {
         "metadata": {
            "labels": {
               "apptype": "monitoring",
               "name": "watchdog-apiserverlb"
            }
         },
         "spec": {
            "containers": [
               {
                  "command": [
                     "/sam/watchdog",
                     "-role=APISERVERLB",
                     "-watchdogFrequency=60s",
                     "-alertThreshold=60s",
                     "-emailFrequency=1h",
                     "-timeout=2s",
                     "-funnelEndpoint=mandm-funnel-dfw1.data.sfdc.net:8080",
                     "-rcImtEndpoint=http://shared0-samminionreportcollector1-1-dfw.ops.sfdc.net:18443/v1/bark",
                     "-smtpServer=ops0-mta2-2-dfw.ops.sfdc.net:25",
                     "-sender=sam@salesforce.com",
                     "-recipient=sam@salesforce.com",
                     "-tlsEnabled=true",
                     "-caFile=/data/certs/ca.crt",
                     "-keyFile=/data/certs/hostcert.key",
                     "-certFile=/data/certs/hostcert.crt"
                  ],
                  "image": "ops0-artifactrepo1-0-dfw.data.sfdc.net/tnrp/sam/hypersam:sam-0000717-5041629c",
                  "name": "watchdog-apiserverlb"
               }
            ],
            "hostNetwork": true,
            "nodeSelector": {
               "pool": "dfw-sam"
            }
         }
      }
   }
}
