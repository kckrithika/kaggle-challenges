{
   "apiVersion": "extensions/v1beta1",
   "kind": "Deployment",
   "metadata": {
      "labels": {
         "name": "watchdog-pod"
      },
      "name": "watchdog-pod"
   },
   "spec": {
      "replicas": 1,
      "selector": {
         "matchLabels": {
            "name": "watchdog-pod"
         }
      },
      "template": {
         "metadata": {
            "labels": {
               "apptype": "monitoring",
               "name": "watchdog-pod"
            }
         },
         "spec": {
            "containers": [
               {
                  "command": [
                     "/sam/watchdog",
                     "-role=POD",
                     "-watchdogFrequency=60s",
                     "-alertThreshold=300s",
                     "-emailFrequency=24h",
                     "-timeout=2s",
                     "-funnelEndpoint=mandm-funnel-dfw1.data.sfdc.net:8080",
                     "-rcImtEndpoint=http://shared0-samminionreportcollector1-1-dfw.ops.sfdc.net:18443/v1/bark",
                     "-smtpServer=ops0-mta2-2-dfw.ops.sfdc.net:25",
                     "-sender=sam@salesforce.com",
                     "-recipient=sam@salesforce.com",
                     "-tlsEnabled=true",
                     "-caFile=/data/certs/ca.crt",
                     "-keyFile=/data/certs/hostcert.key",
                     "-certFile=/data/certs/hostcert.crt",
                     "-snoozedAlarms=podUpTimeChecker=2017/05/02"
                  ],
                  "env": [
                     {
                        "name": "KUBECONFIG",
                        "value": "/config/kubeconfig"
                     }
                  ],
                  "image": "ops0-artifactrepo1-0-dfw.data.sfdc.net/tnrp/sam/hypersam:sam-0000823-9d4a0250",
                  "name": "watchdog-pod",
                  "volumeMounts": [
                     {
                        "mountPath": "/data/certs",
                        "name": "certs"
                     },
                     {
                        "mountPath": "/config",
                        "name": "config"
                     }
                  ]
               }
            ],
            "hostNetwork": true,
            "nodeSelector": {
               "pool": "dfw-sam"
            },
            "volumes": [
               {
                  "hostPath": {
                     "path": "/data/certs"
                  },
                  "name": "certs"
               },
               {
                  "hostPath": {
                     "path": "/etc/kubernetes"
                  },
                  "name": "config"
               }
            ]
         }
      }
   }
}
