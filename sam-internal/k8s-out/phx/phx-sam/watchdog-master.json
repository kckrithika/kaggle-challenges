{
   "apiVersion": "extensions/v1beta1",
   "kind": "DaemonSet",
   "metadata": {
      "labels": {
         "name": "watchdog-master"
      },
      "name": "watchdog-master"
   },
   "spec": {
      "template": {
         "metadata": {
            "labels": {
               "app": "watchdog-master",
               "apptype": "monitoring",
               "daemonset": "true"
            }
         },
         "spec": {
            "containers": [
               {
                  "command": [
                     "/sam/watchdog",
                     "-role=MASTER",
                     "-watchdogFrequency=5s",
                     "-alertThreshold=150s",
                     "-timeout=2s",
                     "-funnelEndpoint=ajna0-funnel1-0-phx.data.sfdc.net:80",
                     "--config=/config/watchdog.json",
                     "-emailFrequency=12h"
                  ],
                  "image": "ops0-artifactrepo1-0-phx.data.sfdc.net/tnrp/sam/hypersam:sam-0001191-d752a5d0",
                  "name": "watchdog",
                  "resources": {
                     "limits": {
                        "cpu": "0.5",
                        "memory": "300Mi"
                     },
                     "requests": {
                        "cpu": "0.5",
                        "memory": "300Mi"
                     }
                  },
                  "volumeMounts": [
                     {
                        "mountPath": "/data/certs",
                        "name": "certs"
                     },
                     {
                        "mountPath": "/config",
                        "name": "config"
                     }
                  ]
               }
            ],
            "hostNetwork": true,
            "nodeSelector": {
               "master": "true"
            },
            "volumes": [
               {
                  "hostPath": {
                     "path": "/data/certs"
                  },
                  "name": "certs"
               },
               {
                  "configMap": {
                     "name": "watchdog"
                  },
                  "name": "config"
               }
            ]
         }
      }
   }
}
