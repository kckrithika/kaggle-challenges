{
   "apiVersion": "extensions/v1beta1",
   "kind": "DaemonSet",
   "metadata": {
      "labels": {
         "name": "watchdog-master"
      },
      "name": "watchdog-master"
   },
   "spec": {
      "template": {
         "metadata": {
            "labels": {
               "app": "watchdog-master",
               "apptype": "monitoring",
               "daemonset": "true"
            }
         },
         "spec": {
            "containers": [
               {
                  "command": [
                     "/sam/watchdog",
                     "-role=MASTER",
                     "-watchdogFrequency=5s",
                     "-alertThreshold=150s",
                     "-timeout=2s",
                     "-funnelEndpoint=ajna0-funnel1-0-ukb.data.sfdc.net:80",
                     "-rcImtEndpoint=https://ops0-health1-1-ukb.ops.sfdc.net:18443/v1/bark",
                     "-smtpServer=ops0-mta2-1-ukb.ops.sfdc.net:25",
                     "-sender=sam-alerts@salesforce.com",
                     "-recipient=sam-alerts@salesforce.com",
                     "-tlsEnabled=true",
                     "-caFile=/data/certs/ca.crt",
                     "-keyFile=/data/certs/hostcert.key",
                     "-certFile=/data/certs/hostcert.crt",
                     "-emailFrequency=12h"
                  ],
                  "image": "ops0-artifactrepo1-0-ukb.data.sfdc.net/tnrp/sam/hypersam:sam-0001027-676096c4",
                  "name": "watchdog",
                  "resources": {
                     "limits": {
                        "cpu": "0.5",
                        "memory": "300Mi"
                     },
                     "requests": {
                        "cpu": "0.5",
                        "memory": "300Mi"
                     }
                  },
                  "volumeMounts": [
                     {
                        "mountPath": "/data/certs",
                        "name": "certs"
                     }
                  ]
               }
            ],
            "hostNetwork": true,
            "nodeSelector": {
               "master": "true"
            },
            "volumes": [
               {
                  "hostPath": {
                     "path": "/data/certs"
                  },
                  "name": "certs"
               }
            ]
         }
      }
   }
}
