{
   "apiVersion": "extensions/v1beta1",
   "kind": "Deployment",
   "metadata": {
      "labels": {
         "name": "sdn-route-watchdog"
      },
      "name": "sdn-route-watchdog"
   },
   "spec": {
      "replicas": 1,
      "template": {
         "metadata": {
            "labels": {
               "apptype": "monitoring",
               "name": "sdn-route-watchdog"
            }
         },
         "spec": {
            "containers": [
               {
                  "command": [
                     "/sdn/sdn-route-watchdog",
                     "--funnelEndpoint=ajna0-funnel1-0-ukb.data.sfdc.net:80",
                     "--archiveSvcEndpoint=https://ops0-piperepo1-1-ukb.ops.sfdc.net/tnrp/content_repo/0/archive",
                     "--momCollectorEndpoint=https://ops0-momapi1-0-ukb.data.sfdc.net/network/device?key=host-bgp-routes",
                     "--smtpServer=ops0-mta2-1-ukb.ops.sfdc.net:25",
                     "--sender=sdn-alerts@salesforce.com",
                     "--recipient=sdn-alerts@salesforce.com",
                     "--emailFrequency=12h",
                     "--watchdogFrequency=180s",
                     "--alertThreshold=300s",
                     "--livenessProbePort=9104"
                  ],
                  "image": "ops0-artifactrepo1-0-ukb.data.sfdc.net/tnrp/sdn/hypersdn:v-0000181-afcb9bb6",
                  "livenessProbe": {
                     "httpGet": {
                        "path": "/liveness-probe",
                        "port": 9104
                     },
                     "initialDelaySeconds": 5,
                     "periodSeconds": 20,
                     "timeoutSeconds": 5
                  },
                  "name": "sdn-route-watchdog"
               }
            ],
            "hostNetwork": true,
            "nodeSelector": {
               "pool": "ukb-sam"
            }
         }
      }
   }
}
