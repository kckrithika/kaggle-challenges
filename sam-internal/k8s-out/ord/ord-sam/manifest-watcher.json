{
   "apiVersion": "extensions/v1beta1",
   "kind": "Deployment",
   "metadata": {
      "labels": {
         "name": "manifest-watcher"
      },
      "name": "manifest-watcher"
   },
   "spec": {
      "replicas": 1,
      "selector": {
         "matchLabels": {
            "name": "manifest-watcher"
         }
      },
      "template": {
         "metadata": {
            "labels": {
               "apptype": "control",
               "name": "manifest-watcher"
            }
         },
         "spec": {
            "containers": [
               {
                  "command": [
                     "/sam/manifest-watcher",
                     "--funnelEndpoint=ajna0-funnel1-0-ord.data.sfdc.net:80",
                     "--v=2",
                     "--logtostderr=true",
                     "--config=/config/manifestwatcher.json"
                  ],
                  "image": "ops0-artifactrepo1-0-ord.data.sfdc.net/tnrp/sam/hypersam:sam-0001140-a550f4f8",
                  "name": "manifest-watcher",
                  "volumeMounts": [
                     {
                        "mountPath": "/data/certs",
                        "name": "certs"
                     },
                     {
                        "mountPath": "/config",
                        "name": "config"
                     }
                  ]
               }
            ],
            "hostNetwork": true,
            "nodeSelector": {
               "pool": "ord-sam"
            },
            "volumes": [
               {
                  "hostPath": {
                     "path": "/data/certs"
                  },
                  "name": "certs"
               },
               {
                  "hostPath": {
                     "path": "/manifests"
                  },
                  "name": "sfdc-volume"
               },
               {
                  "configMap": {
                     "name": "manifest-watcher"
                  },
                  "name": "config"
               }
            ]
         }
      }
   }
}
