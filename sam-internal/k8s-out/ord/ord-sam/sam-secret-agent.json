{
   "apiVersion": "extensions/v1beta1",
   "kind": "Deployment",
   "metadata": {
      "labels": {
         "name": "sam-secret-agent"
      },
      "name": "sam-secret-agent"
   },
   "spec": {
      "replicas": 1,
      "template": {
         "metadata": {
            "labels": {
               "apptype": "control",
               "name": "sam-secret-agent"
            }
         },
         "spec": {
            "containers": [
               {
                  "command": [
                     "/sam/sam-secret-agent",
                     "--funnelEndpoint=ajna0-funnel1-0-ord.data.sfdc.net:80",
                     "--logtostderr=true",
                     "--disableSecurityCheck=true",
                     "--tnrpEndpoint=https://ops0-piperepo1-1-ord.ops.sfdc.net/tnrp/content_repo/0/archive",
                     "--observeMode=false",
                     "--delay=300s",
                     "--keyfile=/data/certs/hostcert.key",
                     "--certfile=/data/certs/hostcert.crt",
                     "--cafile=/data/certs/ca.crt"
                  ],
                  "env": [
                     {
                        "name": "KUBECONFIG",
                        "value": "/config/kubeconfig"
                     }
                  ],
                  "image": "ops0-artifactrepo1-0-ord.data.sfdc.net/tnrp/sam/hypersam:sam-0000974-61dae805",
                  "livenessProbe": {
                     "httpGet": {
                        "path": "/",
                        "port": 9098
                     },
                     "initialDelaySeconds": 2,
                     "periodSeconds": 10,
                     "timeoutSeconds": 10
                  },
                  "name": "sam-secret-agent",
                  "volumeMounts": [
                     {
                        "mountPath": "/data/certs",
                        "name": "certs"
                     },
                     {
                        "mountPath": "/config",
                        "name": "config"
                     }
                  ]
               }
            ],
            "hostNetwork": true,
            "nodeSelector": {
               "pool": "ord-sam"
            },
            "volumes": [
               {
                  "hostPath": {
                     "path": "/data/certs"
                  },
                  "name": "certs"
               },
               {
                  "hostPath": {
                     "path": "/etc/kubernetes"
                  },
                  "name": "config"
               }
            ]
         }
      }
   }
}
