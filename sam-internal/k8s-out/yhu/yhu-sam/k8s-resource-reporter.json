{
   "apiVersion": "extensions/v1beta1",
   "kind": "Deployment",
   "metadata": {
      "labels": {
         "name": "k8s-resource-reporter"
      },
      "name": "k8s-resource-reporter",
      "namespace": "sam-system"
   },
   "spec": {
      "replicas": 1,
      "selector": {
         "matchLabels": {
            "name": "k8s-resource-reporter"
         }
      },
      "template": {
         "metadata": {
            "labels": {
               "apptype": "control",
               "name": "k8s-resource-reporter"
            }
         },
         "spec": {
            "containers": [
               {
                  "command": [
                     "/sam/k8s-resource-reporter",
                     "--v=5",
                     "--k8sapiserver=",
                     "--smtpServer=ops0-mta2-1-yhu.ops.sfdc.net:25",
                     "--sender=sam@salesforce.com",
                     "--defaultRecipient=mayank.kumar@salesforce.com",
                     "--namespacesToSkip=sam-watchdog,legostore,sam-system,sf-store",
                     "--hostsConfigFile=/sfdchosts/hosts.json"
                  ],
                  "env": [
                     {
                        "name": "KUBECONFIG",
                        "value": "/kubeconfig/kubeconfig"
                     }
                  ],
                  "image": "ops0-artifactrepo1-0-yhu.data.sfdc.net/tnrp/sam/hypersam:sam-0001355-581a778b",
                  "name": "k8s-resource-reporter",
                  "volumeMounts": [
                     {
                        "mountPath": "/sfdchosts",
                        "name": "sfdchosts"
                     },
                     {
                        "mountPath": "/data/certs",
                        "name": "certs"
                     },
                     {
                        "mountPath": "/kubeconfig",
                        "name": "kubeconfig"
                     }
                  ]
               }
            ],
            "hostNetwork": true,
            "nodeSelector": {
               "pool": "yhu-sam"
            },
            "volumes": [
               {
                  "configMap": {
                     "name": "sfdchosts"
                  },
                  "name": "sfdchosts"
               },
               {
                  "hostPath": {
                     "path": "/data/certs"
                  },
                  "name": "certs"
               },
               {
                  "hostPath": {
                     "path": "/etc/kubernetes"
                  },
                  "name": "kubeconfig"
               }
            ]
         }
      }
   }
}
