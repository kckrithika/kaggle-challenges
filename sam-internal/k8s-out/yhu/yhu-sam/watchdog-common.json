{
   "apiVersion": "extensions/v1beta1",
   "kind": "DaemonSet",
   "metadata": {
      "labels": {
         "name": "watchdog-common"
      },
      "name": "watchdog-common"
   },
   "spec": {
      "template": {
         "metadata": {
            "labels": {
               "app": "watchdog-common",
               "apptype": "monitoring",
               "daemonset": "true"
            }
         },
         "spec": {
            "containers": [
               {
                  "command": [
                     "/sam/watchdog",
                     "-role=COMMON",
                     "-watchdogFrequency=5s",
                     "-alertThreshold=20m",
                     "-timeout=2s",
                     "-funnelEndpoint=ajna0-funnel1-0-yhu.data.sfdc.net:80",
                     "-rcImtEndpoint=https://ops0-health1-1-yhu.ops.sfdc.net:18443/v1/bark",
                     "-smtpServer=ops0-mta2-1-yhu.ops.sfdc.net:25",
                     "-sender=sam-alerts@salesforce.com",
                     "-recipient=sam-alerts@salesforce.com",
                     "-emailFrequency=24h",
                     "-snoozedAlarms=kubeletChecker=2017/06/15&kubeProxyChecker=2017/06/15"
                  ],
                  "image": "ops0-artifactrepo1-0-yhu.data.sfdc.net/tnrp/sam/hypersam:sam-0000974-61dae805",
                  "name": "watchdog",
                  "resources": {
                     "limits": {
                        "cpu": "0.5",
                        "memory": "300Mi"
                     },
                     "requests": {
                        "cpu": "0.5",
                        "memory": "300Mi"
                     }
                  },
                  "volumeMounts": [
                     {
                        "mountPath": "/hostproc",
                        "name": "procfs-volume"
                     }
                  ]
               }
            ],
            "hostNetwork": true,
            "volumes": [
               {
                  "hostPath": {
                     "path": "/proc"
                  },
                  "name": "procfs-volume"
               }
            ]
         }
      }
   }
}
