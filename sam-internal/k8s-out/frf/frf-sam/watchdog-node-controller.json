{
   "apiVersion": "extensions/v1beta1",
   "kind": "Deployment",
   "metadata": {
      "labels": {
         "name": "watchdog-node-controller"
      },
      "name": "watchdog-node-controller",
      "namespace": "sam-system"
   },
   "spec": {
      "replicas": 1,
      "selector": {
         "matchLabels": {
            "name": "watchdog-node-controller"
         }
      },
      "template": {
         "metadata": {
            "labels": {
               "apptype": "monitoring",
               "name": "watchdog-node-controller"
            }
         },
         "spec": {
            "containers": [
               {
                  "command": [
                     "/sam/watchdog",
                     "-role=NODECONTROLLER",
                     "-watchdogFrequency=10s",
                     "-alertThreshold=300s",
                     "-timeout=2s",
                     "-funnelEndpoint=mandm-funnel-frf1.data.sfdc.net:8080",
                     "-rcImtEndpoint=https://ops0-health1-1-frf.ops.sfdc.net:18443/v1/bark",
                     "-smtpServer=ops0-mta2-1-frf.ops.sfdc.net:25",
                     "-sender=sam-alerts@salesforce.com",
                     "-recipient=sam-alerts@salesforce.com",
                     "--config=/config/watchdog.json",
                     "-tlsEnabled=true",
                     "-caFile=/data/certs/ca.crt",
                     "-keyFile=/data/certs/hostcert.key",
                     "-certFile=/data/certs/hostcert.crt"
                  ],
                  "env": [
                     {
                        "name": "KUBECONFIG",
                        "value": "/kubeconfig/kubeconfig"
                     }
                  ],
                  "image": "ops0-artifactrepo1-0-frf.data.sfdc.net/tnrp/sam/hypersam:sam-0001140-a550f4f8",
                  "name": "watchdog-node-controller",
                  "volumeMounts": [
                     {
                        "mountPath": "/data/certs",
                        "name": "certs"
                     },
                     {
                        "mountPath": "/kubeconfig",
                        "name": "kubeconfig"
                     },
                     {
                        "mountPath": "/config",
                        "name": "config"
                     }
                  ]
               }
            ],
            "hostNetwork": true,
            "nodeSelector": {
               "pool": "frf-sam"
            },
            "volumes": [
               {
                  "hostPath": {
                     "path": "/data/certs"
                  },
                  "name": "certs"
               },
               {
                  "hostPath": {
                     "path": "/etc/kubernetes"
                  },
                  "name": "kubeconfig"
               },
               {
                  "configMap": {
                     "name": "watchdog"
                  },
                  "name": "config"
               }
            ]
         }
      }
   }
}
