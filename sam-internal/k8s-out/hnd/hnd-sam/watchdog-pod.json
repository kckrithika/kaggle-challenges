{
   "apiVersion": "extensions/v1beta1",
   "kind": "Deployment",
   "metadata": {
      "labels": {
         "name": "watchdog-pod"
      },
      "name": "watchdog-pod"
   },
   "spec": {
      "replicas": 1,
      "selector": {
         "matchLabels": {
            "name": "watchdog-pod"
         }
      },
      "template": {
         "metadata": {
            "labels": {
               "apptype": "monitoring",
               "name": "watchdog-pod"
            }
         },
         "spec": {
            "containers": [
               {
                  "command": [
                     "/sam/watchdog",
                     "-role=POD",
                     "-watchdogFrequency=60s",
                     "-alertThreshold=300s",
                     "-maxUptimeSampleSize=5",
                     "-podNamespacePrefixBlacklist=sam-watchdog",
                     "-timeout=2s",
                     "-funnelEndpoint=ajna0-funnel1-0-hnd.data.sfdc.net:80",
                     "-rcImtEndpoint=https://ops0-health1-1-hnd.ops.sfdc.net:18443/v1/bark",
                     "-smtpServer=ops0-mta2-1-hnd.ops.sfdc.net:25",
                     "-sender=sam-alerts@salesforce.com",
                     "-recipient=sam-alerts@salesforce.com",
                     "-tlsEnabled=true",
                     "-caFile=/data/certs/ca.crt",
                     "-keyFile=/data/certs/hostcert.key",
                     "-certFile=/data/certs/hostcert.crt",
                     "-emailFrequency=24h"
                  ],
                  "env": [
                     {
                        "name": "KUBECONFIG",
                        "value": "/config/kubeconfig"
                     }
                  ],
                  "image": "ops0-artifactrepo1-0-hnd.data.sfdc.net/tnrp/sam/hypersam:sam-0001068-adfe25aa",
                  "name": "watchdog-pod",
                  "volumeMounts": [
                     {
                        "mountPath": "/data/certs",
                        "name": "certs"
                     },
                     {
                        "mountPath": "/config",
                        "name": "config"
                     }
                  ]
               }
            ],
            "hostNetwork": true,
            "nodeSelector": {
               "pool": "hnd-sam"
            },
            "volumes": [
               {
                  "hostPath": {
                     "path": "/data/certs"
                  },
                  "name": "certs"
               },
               {
                  "hostPath": {
                     "path": "/etc/kubernetes"
                  },
                  "name": "config"
               }
            ]
         }
      }
   }
}
